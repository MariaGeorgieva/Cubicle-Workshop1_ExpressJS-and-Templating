{{#with cube}}
<h1>{{name}}</h1>
<img class="cube" src={{imgURL}}>
<div class="details">
    <p><span>Description:</span>{{description}}</p>
    <p><span>Difficulty level:</span> {{level}}</p>
    <a class="btn" href="/">Back</a>
    <a class="btn" href="/accessory/attach/{{_id}}">Edit Accessories</a>
</div>

<h2>Accessories</h2>
<div>{{accessories}}</div>
